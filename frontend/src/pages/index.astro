---
import GroupSelection from "../components/GroupSelection";
import Layout from "../layouts/Layout.astro";
---

<Layout title="HTWK Stundenplan">
  <div class="h-full flex flex-col">
    <GroupSelection client:load />

    <div id="calendar"></div>
    <div
      class="z-50 max-w-sm top-0 left-0 px-4 py-3 absolute hidden shadow-md rounded-md bg-white text-sm"
      id="popover"
    >
      <div class="flex gap-2 justify-between">
        <span id="title" class="font-bold">Title</span>
        <button id="close_btn" class="w-5 h-5">âœ•</button>
      </div>
      <div id="descr"></div>

      <div class="pt-2">
        <div id="rooms"></div>
        <div id="kind"></div>
        <div id="time"></div>
      </div>
    </div>
  </div>
</Layout>

<style is:global>
  .fc-event:hover {
    cursor: pointer;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () =>
    import("../components/Calendar.ts"),
  );
</script>
