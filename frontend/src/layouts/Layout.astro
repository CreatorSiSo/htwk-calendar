---
import "@fontsource/jetbrains-mono/800.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-screen w-screen overflow-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Übersichtlicher Seminargruppenplan für die HTWK"
    />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="h-screen max-h-screen overflow-hidden">
    <slot />
  </body>
</html>
